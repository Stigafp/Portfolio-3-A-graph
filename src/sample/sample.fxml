<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <top>
      <Label text="AStarGraph Pathfinder" BorderPane.alignment="CENTER">
         <font>
            <Font size="28.0" />
         </font>
      </Label>
   </top>
   <left>
      <VBox prefHeight="366.0" prefWidth="156.0" BorderPane.alignment="CENTER">
         <children>
            <Label prefHeight="100.0" prefWidth="147.0" text="Start vertex" />
            <Label prefHeight="100.0" prefWidth="145.0" text="Destination vertex" />
            <Label prefHeight="100.0" prefWidth="115.0" text="Estimation method" />
         </children>
         <BorderPane.margin>
            <Insets left="10.0" />
         </BorderPane.margin>
      </VBox>
   </left>
   <bottom>
      <Button mnemonicParsing="false" onAction="#exitButton" prefHeight="27.0" prefWidth="102.0" text="Exit" BorderPane.alignment="TOP_RIGHT">
         <BorderPane.margin>
            <Insets bottom="30.0" right="30.0" />
         </BorderPane.margin></Button>
   </bottom>
   <center>
      <VBox prefHeight="366.0" prefWidth="433.0" BorderPane.alignment="CENTER">
         <children>
            <ComboBox onAction="#startVertexChoice" prefWidth="150.0" promptText="Choose vertex">
               <VBox.margin>
                  <Insets top="38.0" />
               </VBox.margin>
            </ComboBox>
            <ComboBox onAction="#destinationVertexChoice" prefWidth="150.0" promptText="Choose vertex">
               <VBox.margin>
                  <Insets top="72.0" />
               </VBox.margin>
            </ComboBox>
         </children></VBox>
   </center>
</BorderPane>
